<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
         http://www.springframework.org/schema/beans
         http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <!-- Gmail SMTPìš© JavaMailSender -->
    <bean id="mailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
        <property name="host" value="#{ConfigProperties['mail.host']}"/>
        <property name="port" value="#{ConfigProperties['mail.port']}"/>
        <property name="username" value="#{ConfigProperties['mail.username']}"/>
        <property name="password" value="#{ConfigProperties['mail.password']}"/> 
        <property name="defaultEncoding" value="UTF-8"/>
        <property name="javaMailProperties">
            <props>
                <prop key="mail.smtp.auth">true</prop>
                <prop key="mail.smtp.starttls.enable">true</prop>
                <prop key="mail.smtp.timeout">10000</prop>
            </props>
        </property>
    </bean>

</beans>